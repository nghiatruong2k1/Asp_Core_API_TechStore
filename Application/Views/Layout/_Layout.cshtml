@{
    string websitename = Environment.GetEnvironmentVariable("ASPNETCORE_WEBSITE_NAME");
}

<!DOCTYPE HTML>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@websitename | @ViewBag.title</title>
</head>
<body>
    <script src="~/Scripts/views/Handle.js" type="text/javascript"></script>
    <b class="screen-overlay"></b>
    <!-- ========================= BODY ========================= -->
    @RenderBody()
    <!-- ========================= BODY END ========================= -->
    @{
        TempData.Clear();
    }
</body>
</html>